<Window x:Class="NhdBuffer.NhdBufferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize" VerticalAlignment="Center" HorizontalAlignment="Center" SizeToContent="WidthAndHeight" Background="White">
  <StackPanel>
    <Menu x:Name="Menu">
      <MenuItem Header="_File">
        <MenuItem x:Name="View360MenuItem" Header="View _360" Click="View360" />
        <MenuItem x:Name="View720MenuItem" Header="View _720" Click="View720" />
        <MenuItem x:Name="View1080MenuItem" Header="View _1080" Click="View1080" />
        <Separator />
        <MenuItem Header="_Quit" Click="quit" />
      </MenuItem>
    </Menu>
    <Image x:Name="Display360" Width="640" Height="360" Margin="12" Stretch="None" />
    <Image x:Name="Display720" Width="1280" Height="720" Margin="12" Stretch="None" Visibility="Collapsed" />
    <Image x:Name="Display1080" Width="1920" Height="1080" Margin="0" Stretch="None" Visibility="Collapsed" />
  </StackPanel>
</Window>
